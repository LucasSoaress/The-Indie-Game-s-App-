<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sbgames.lucassoares.com.sbgames.modosAcitivity"
    android:background="@drawable/fundoo">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/modoNormalId"
        android:src="@drawable/normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/modoDinamicoId"
        android:src="@drawable/dinamico"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/modoNormalId"
        android:layout_alignLeft="@+id/modoNormalId"
        android:layout_alignStart="@+id/modoNormalId" />

</RelativeLayout>
